<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="268dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image_view"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:scaleType="fitCenter"
                tools:src="@drawable/vicburns_36">

            </ImageView>

            <!--Patient Info CardView-->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_patient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_view">

                <!--This is a ConstraintLayout for the entire CardView
                           including the expandable portion-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/card_patient">

                    <!--This is a ConstraintLayout for the fixed portion
                        of the CardView. The elements
                        that lie within the fixed portion of the CardView
                        can be constrained to this layout.-->
                    <LinearLayout
                        android:id="@+id/fixed_layout_patient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="Patient Info"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                        <!--This is ImageButton for the expansion icon.-->
                        <ImageView
                            android:id="@+id/arrow_button_patient"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:src="@drawable/ic_baseline_expand_less_24" />

                    </LinearLayout>

                    <!--The following is the expandable portion whose
                        visibility is initially set to 'gone'. -->

                    <View
                        android:id="@+id/divider_patient"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="?android:attr/listDivider"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/fixed_layout_patient"
                        tools:visibility="visible" />

                    <TableLayout
                        android:id="@+id/table_patient"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:stretchColumns="0"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/divider_patient"
                        tools:visibility="visible">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name: " />

                            <TextView
                                android:id="@+id/patient_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                tools:text="fergilious" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Height: " />

                            <TextView
                                android:id="@+id/patient_height"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                tools:text="fergilious" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weight: " />

                            <TextView
                                android:id="@+id/patient_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="fergilious" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/title_surface_area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/title_body_surface_area" />

                            <TextView
                                android:id="@+id/patient_total_skin_area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/surface_area"
                                tools:text="fergilious" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="database id: " />

                            <TextView
                                android:id="@+id/patient_database_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                tools:text="1" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="patient id: " />

                            <TextView
                                android:id="@+id/patient_hospital_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                tools:text="fergilious" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="institution: " />

                            <TextView
                                android:id="@+id/institution"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                tools:text="fergilious" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="health care provider: " />

                            <TextView
                                android:id="@+id/health_care_provider"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                tools:text="fergilious" />
                        </TableRow>

                    </TableLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_patient">

                <!--This is a ConstraintLayout for the entire CardView
                           including the expandable portion-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/card_model">

                    <!--This is a ConstraintLayout for the fixed portion
                        of the CardView. The elements
                        that lie within the fixed portion of the CardView
                        can be constrained to this layout.-->
                    <LinearLayout
                        android:id="@+id/fixed_layout_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="Model Info"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                        <!--This is ImageButton for the expansion icon.-->
                        <ImageView
                            android:id="@+id/arrow_button_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:src="@drawable/ic_baseline_expand_less_24" />

                    </LinearLayout>

                    <!--The following is the expandable portion whose
                        visibility is initially set to 'gone'.
                        The parent LinearLayout contains 3 child LinearLayouts
                        that hold a subject name and an icon each.-->

                    <View
                        android:id="@+id/divider_model"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="?android:attr/listDivider"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/fixed_layout_model"
                        tools:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/hidden_view_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/fixed_layout_model"
                        tools:visibility="visible">

                        <!--Child LinearLayout 1-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Model Name: " />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="deeplab" />

                        </LinearLayout>

                        <!--Child LinearLayout 2-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="more info: " />
                        </LinearLayout>

                        <!--Child LinearLayout 3-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Operating Systems" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>