<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/form_spacing" >

            <EditText
                android:id="@+id/patientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/patient_name_hint"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                app:layout_constraintTop_toTopOf="parent"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/patientID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/form_spacing"
                android:layout_marginEnd="@dimen/form_spacing"
                android:hint="@string/patient_id_hint"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                app:layout_constraintEnd_toStartOf="@+id/buttonGenerateID"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/patientName"
                android:importantForAutofill="no" />

            <Button
                android:id="@+id/buttonGenerateID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_generate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/patientID"
                app:layout_constraintTop_toTopOf="@+id/patientID" />

            <EditText
                android:id="@+id/patientHeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/form_spacing"
                android:layout_marginEnd="@dimen/form_spacing"
                android:hint="@string/patient_height"
                android:inputType="number"
                android:minHeight="48dp"
                app:layout_constraintEnd_toStartOf="@+id/patientWeight"
                app:layout_constraintHorizontal_weight=".5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/patientID"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/patientWeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/form_spacing"
                android:hint="@string/patient_weight"
                android:inputType="number"
                android:minHeight="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight=".5"
                app:layout_constraintStart_toEndOf="@+id/patientHeight"
                app:layout_constraintTop_toTopOf="@+id/patientHeight"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/recordingDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/form_spacing"
                android:hint="@string/date"
                android:inputType="date"
                android:minHeight="48dp"
                app:layout_constraintTop_toBottomOf="@+id/patientHeight"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/attendingPhysician"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/form_spacing"
                android:hint="@string/attending_provider"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                app:layout_constraintTop_toBottomOf="@+id/recordingDate"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/institution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/form_spacing"
                android:hint="@string/institution_name"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                app:layout_constraintTop_toBottomOf="@+id/attendingPhysician" />

            <CheckBox
                android:id="@+id/checkBoxUsageNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/form_spacing"
                android:text="@string/usage_warning"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/institution" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/form_spacing"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkBoxUsageNotification" />

            <Button
                android:id="@+id/buttonCancel"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/form_spacing"
                android:layout_marginEnd="@dimen/form_spacing"
                android:text="@string/button_cancel"
                app:layout_constraintEnd_toStartOf="@+id/buttonCamera"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <Button
                android:id="@+id/buttonCamera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/form_spacing"
                android:text="@string/button_camera"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buttonCancel"
                app:layout_constraintTop_toTopOf="@+id/buttonCancel" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>