<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/patientsFragment">

    <fragment
        android:id="@+id/patientsFragment"
        android:name="com.example.burnestimation.PatientsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_patients" >
        <action
            android:id="@+id/action_patientsFragment_to_patientDetailFragment"
            app:destination="@id/patientDetailFragment" />
        <action
            android:id="@+id/action_patientsFragment_to_patientNewFragment"
            app:destination="@id/patientNewFragment" />
    </fragment>
    <fragment
        android:id="@+id/patientDetailFragment"
        android:name="com.example.burnestimation.PatientDetailFragment"
        android:label="@string/patient_detail"
        tools:layout="@layout/fragment_patient_detail">
        <argument
            android:name="patientID"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/patientNewFragment"
        android:name="com.example.burnestimation.PatientNewFragment"
        android:label="@string/new_patient"
        tools:layout="@layout/fragment_patient_new" >
        <action
            android:id="@+id/action_patientNewFragment_to_patientsFragment"
            app:destination="@id/patientsFragment"
            app:popUpTo="@id/patientsFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_patientNewFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
    </fragment>
    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.example.burnestimation.CameraFragment"
        tools:layout="@layout/fragment_camera">
        <action
            android:id="@+id/action_cameraFragment_to_patientNewFragment"
            app:destination="@id/patientNewFragment" />
        <argument
            android:name="cameraId"
            app:argType="string" />
        <argument
            android:name="pixel_format"
            app:argType="integer" />
        <argument
            android:name="imgUri"
            app:argType="string" />
        <action
            android:id="@+id/action_cameraFragment_to_patientDetailFragment"
            app:destination="@id/patientDetailFragment" />
        <argument
            android:name="patientDBID"
            app:argType="integer" />
    </fragment>
</navigation>